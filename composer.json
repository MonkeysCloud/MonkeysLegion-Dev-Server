{
  "name": "monkeyscloud/monkeyslegion-dev-server",
  "description": "Hot-reload development server for MonkeysLegion applications.",
  "type": "library",
  "keywords": [
    "monkeyslegion",
    "development",
    "dev-server",
    "hot-reload",
    "php",
    "web-server"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Jorge Peraza",
      "email": "jorge@monkeyscloud.com"
    }
  ],
  "require": {
    "php": "^8.4",
    "ext-posix": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5|^10.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "MonkeysLegion\\DevServer\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MonkeysLegion\\DevServer\\Tests\\": "tests/"
    }
  },
  "bin": ["bin/dev-server"],
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse src --level=8",
    "check": [
      "@test",
      "@analyse"
    ]
  },
  "suggest": {
    "entr": "File watcher for automatic hot-reload on file changes"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0.x-dev"
    }
  }
}